<div class="container">
  <div id="articles">
      <div class="article">
        <h1><%=@article.title%></h1>
        <hr>
        <p><%=@article.content%></p>
      </div>
      <div>
        <button type="button" class="btn btn-light">
          <%= link_to 'Delete', article_path(@article), method: :delete, data: { confirm: "Are you sure you want to delete this?" } %>
        </button>

        <button type="button" class="btn btn-light">
          <%= link_to 'Edit', edit_article_path(@article) %>
        </button>
      </div>
  </div>
</div>


